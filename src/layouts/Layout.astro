---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  locale?: string;
}
const { title, description = 'Your digital storefront in minutes. Upload your menu PDF, get a QR code, and share with customers.', locale = 'en' } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang={locale}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<title>{title}</title>

		<!-- Google Fonts: Instrument Serif (headings) + DM Sans (body) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Instrument+Serif:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body class="min-h-screen">
		<slot />
	</body>
</html>
